<UserControl x:Class="WPF_Application.UserControls.Forms.MenuActionStockSell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Application.UserControls.Forms" xmlns:WPF_Application.UserControls="clr-namespace:WPF_Application.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <WPF_Application.UserControls:MenuUserControl></WPF_Application.UserControls:MenuUserControl>
        <WPF_Application.UserControls:MenuUserControl></WPF_Application.UserControls:MenuUserControl>
        <DockPanel>
            <Image Height="86" Width="71"></Image>
        </DockPanel>
        <DockPanel>


            <StackPanel   Background="LightGray" Height="425" Width="450" HorizontalAlignment="Center" VerticalAlignment="Center">


                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock FontSize="20">Sell or Buy Action</TextBlock>
                  
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Horizontal">
              
                    <Button x:Name="btnBuy" Content="Buy an stock" Height="34" Click="Buy_Click"/>
                    <Button x:Name="btnSell" Margin="5,0,0,0" Content="Sell a Stock" Height="34" Click="Sell_Click" />
                </StackPanel>
            </StackPanel>
        </DockPanel>




    </Grid>
</UserControl>
