<UserControl x:Class="WPF_Application.UserControls.Controls.CryptoUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Application.UserControls.Controls"
             mc:Ignorable="d"  x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel DataContext="{Binding .,ElementName=root}" Background="LightGray" >

            <Separator />
            <TextBlock FontSize="20" Text="Crypto Information "></TextBlock>
            <Separator></Separator>

            <TextBlock Text="ID :"/>
            <TextBlock Text="{Binding CurrentCrypto.Id}"/>
            <TextBlock Text="Name :"/>
            <TextBlock Text="{Binding CurrentCrypto.Name}"/>
            <TextBlock Text="Value :"/>
            <TextBlock Text="{Binding CurrentCrypto.Value}"/>

        </StackPanel>

    </Grid>
</UserControl>
