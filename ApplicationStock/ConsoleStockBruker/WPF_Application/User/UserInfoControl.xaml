<UserControl x:Class="WPF_Application.UserInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Application"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ContentControl x:Name="userMenu"></ContentControl>
        <DockPanel>
            <Image Height="86" Width="71"></Image>
        </DockPanel>
        <DockPanel>


            <StackPanel  Width="600" DockPanel.Dock="top" Background="#FFCEC0C0" Height="309" >

                <DockPanel x:Name="user_message_info" Margin="20,50,20,20">
                    <Label x:Name="Message" >Message :</Label>
                    <TextBlock Height="236" Width="357"></TextBlock>
                    <WrapPanel Height="50" Width="87"  Margin="20,180,20,20">
                        <Button Content="Return" Height="50" Width="87"></Button>
                    </WrapPanel>

                </DockPanel>




            </StackPanel>

        </DockPanel>


    </Grid>
</UserControl>
